@model List<Review>

@{
    ViewData["Title"] = "Reviews";
}

<div class="container">
    <h1>Reviews</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Review ID</th>
                <th>Mentor</th>
                <th>Mentee</th>
                <th>Rating</th>
                <th>Review Text</th>
                <th>Review Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.ReviewId</td>
                    <td>@review.Mentor.User.first_name @review.Mentor.User.last_name</td>
                    <td>@review.Mentee.User.first_name @review.Mentee.User.last_name</td>
                    <td>@review.Rating</td>
                    <td>@review.ReviewText</td>
                    <td>@(review.ReviewDate.HasValue ? review.ReviewDate.Value.ToString("g") : "")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
