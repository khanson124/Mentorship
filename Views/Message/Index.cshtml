@model IEnumerable<Mentorship.Models.Message>

@{
    ViewData["Title"] = "Messages";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Message ID</th>
                <th>Sender ID</th>
                <th>Receiver ID</th>
                <th>Message Content</th>
                <th>Timestamp</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.MessageId</td>
                    <td>@message.SenderId</td>
                    <td>@message.ReceiverId</td>
                    <td>@message.MessageContent</td>
                    <td>@message.Timestamp.ToString()</td>
                    <td>
                        <div class="d-flex justify-content-around">
                            <a href="@Url.Action("Details", "Message", new { id = message.MessageId })" class="btn btn-secondary btn-sm">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="@Url.Action("Edit", "Message", new { id = message.MessageId })" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Message", new { id = message.MessageId })" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
