<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mentorship</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mentorship.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body style="margin-bottom: 100px;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Mentorship Management</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="bi bi-table"></i> Management
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="User" asp-action="Index"><i class="bi bi-person-circle"></i> Users</a>
                            <a class="dropdown-item" asp-controller="Mentor" asp-action="Index"><i class="bi bi-person-badge"></i> Mentors</a>
                            <a class="dropdown-item" asp-controller="Mentee" asp-action="Index"><i class="bi bi-person-square"></i> Mentees</a>
                            <a class="dropdown-item" asp-controller="MentorshipSessions" asp-action="Index"><i class="bi bi-calendar-event"></i> Mentorship Sessions</a>
                            <a class="dropdown-item" asp-controller="Message" asp-action="Index"><i class="bi bi-envelope"></i> Messages</a>
                            <a class="dropdown-item" asp-controller="Review" asp-action="Index"><i class="bi bi-card-text"></i> Reviews</a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="navbar-nav ml-auto">
                <a class="nav-link" href="#" id="messageIcon" role="button">
                    <i class="bi bi-chat-dots"></i>
                </a>
                <a class="nav-link" href="#" id="notificationIcon" role="button">
                    <i class="bi bi-bell"></i>
                </a>
            </div>

            <form class="form-inline my-2 my-lg-0" asp-controller="Search" asp-action="Index" method="get">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="q">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <div class="navbar-nav ml-auto">
                <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                    <button class="btn btn-outline-danger" type="submit"><i class="bi bi-box-arrow-right"></i> Sign Out</button>
                </form>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted" style="padding-bottom: 20px;">
        <div class="container">
            &copy; 2023 - Eagle's Wings Mentorship 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
